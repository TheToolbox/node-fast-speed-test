    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\compiled\\src\\index.js",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}\\compiled\\**\\*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "sourceMaps": true,
            "port": 5858,
            "outFiles": [
                "${workspaceRoot}\\compiled\\**\\*.js"
            ]
        }
    ]
}